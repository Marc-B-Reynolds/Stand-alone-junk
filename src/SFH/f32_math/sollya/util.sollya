// hacky garbage

procedure list_of_coeff(p)
{
  var r,e,i;
  e = degree(p);
  r = [||];

  for i from 0 to e do { r = r :. coeff(p,i); };
  
  return r;
};

procedure list_of_even_coeff(p)
{
  var r,e,i;
  e = degree(p);
  r = [||];

  for i from 0 to e by 2 do { r = r :. coeff(p,i); };
  
  return r;
};

procedure list_of_odd_coeff(p)
{
  var r,e,i;
  e = degree(p);
  r = [||];

  for i from 1 to e by 2 do { r = r :. coeff(p,i); };
  
  return r;
};


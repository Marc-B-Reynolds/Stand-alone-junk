// composed build and dump helpers

procedure f32_build_dump_odd(f, name, basis, x0,x1)
{
  var r;

  r = f32_build(f, basis, x0, x1);

  print("// ~abs error =", r.aerror);
  print("// ~rel error =", r.rerror);

  f32_print_kernel_odd(name, r.approx);
  
  return r;
};

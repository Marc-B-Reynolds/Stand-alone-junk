procedure f32_print_kernel_list(name, c)
{
  var d;

  d = display;
  display=decimal!;
  
  write("static inline float ", name @ "(float x)\n{\n  static ");
  f32_write_list("C", revert(c));
  print("");
  print("  return f32_horner_" @ (length(c)-1) @ "(x,C);");
  print("}\n");

  display=d!;
};


